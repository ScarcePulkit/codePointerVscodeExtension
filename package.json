{
  "name": "code-pointers",
  "displayName": "Code Pointers",
  "publisher": "PulkitAgrawal",
  "description": "Save and revisit important code lines quickly",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ScarcePulkit/codePointerVscodeExtension.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.saveCodePointer",
        "title": "Save Code Pointer"
      },
      {
        "command": "extension.showPointers",
        "title": "Show Code Pointers"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.saveCodePointer",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
